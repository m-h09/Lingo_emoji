<%= form_with url: translation_delete_execute_templates_path, method: :post, local: true do %>
  <% if @histories.present? %>
    <div class="position-relative">
      <div class="translation-head__right">
        <%= submit_tag "削除", class: "btn btn-danger btn-sm" %>
      </div>
      <table class="table-translation table table-striped">
        <tbody>
          <% @histories.each do |history| %>
            <tr>
              <td><%= history.record %></td>
              <td class="translation-text text-center align-middle">
                <%= check_box_tag "records[]", history.record %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="page-wrapper">
      <%= paginate @histories %>
    </div>
  <% else %>
    <p class="text-center mt-4">現在登録はありません。</p>
  <% end %>
<% end %>

<div class="translation-head">
        <div class="translation-head__left">
          <% if logged_in? %>
            <%= form_with url: translation_addition_templates_path, method: :get, local: true, html: { class: "d-flex align-items-center" } do |f| %>
              <%= f.text_field :q, placeholder: "検索ワード", class: "translation-form-control me-2" %>
              <%= f.submit "検索", class: "translation-search-btn btn btn-outline-dark" %>
          <% end %>
          <% else %>
            <p>ログインしてください。</p>
          <% end %>

        </div>
<%= form_with url: add_history_templates_path, method: :post do %>
  <% if @translations.present? %>
    <div class=" position-relative">


      <div class="translation-head__right">
          <%= submit_tag "追加", class: "addition-btn btn btn-outline-dark" %>
      </div>
    </div>
      <table class="table-translation table table-striped">
        <tbody>
          <% @translations.each do |translation| %>
            <tr>
              <td ><%= translation.output_text %></td>
              <td class="translation-text text-center align-middle">
                <%= check_box_tag "output_texts[]", translation.output_text %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  <% else %>
    <p class="text-center mt-4">現在登録はありません。AI生成して履歴を作ってください。</p>
  <% end %>
<% end %>

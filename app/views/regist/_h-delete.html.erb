<%= form_with url: main_translation_delete_path, method: :post, local: true, data: { turbo: false } do %>
  <% if @translations.present? %>
    <div class="position-relative mx-auto" style="width: 320px;">
      <div class="position-absolute mt-5 end-0" style="top: -50px; right: 38px;">
        <%= submit_tag "削除", class: "btn btn-danger btn-sm" %>
      </div>

      <br>
      <br>
      <table class="table table-striped mb-0">
        <tbody>
          <% @translations.each do |translation| %>
            <tr>
              <td><%= translation.output_text %></td>
              <td class="text-center align-middle">
                <%= check_box_tag "records[]", translation.output_text %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  <% else %>
    <p class="text-center mt-4">現在登録はありません。</p>
  <% end %>
<% end %>

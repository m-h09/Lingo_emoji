<body class="bg-center" style="max-width:750px; width:100%; background-color: #fffff0; position: relative; z-index: 2000;">
  <div class="mt-5 mx-auto rounded w-50 position-relative text-center bg-info">
    <!-- PC -->
    <div class="mt-5 mb-2 mx-auto rounded w-50 position-relative text-center d-none d-md-flex">
      <div class="header-title text-center">
        <h1 class="text-white mb-0 py-2 ">EMOJI関西弁変換</h1>
      </div>
    </div>
  </div>
  <div class="mt-5 mx-auto rounded w-75 position-relative text-center bg-info d-none d-md-block d-lg-none">
    <div class="header-title text-center">
      <h2 class="text-white mb-0 py-2">EMOJI関西弁変換</h2>
    </div>
  </div>


    <!-- スマホ -->
  <div class="mt-5 mx-auto rounded w-80 position-relative text-center bg-info">
    <div class="mt-5 mb-2 mx-auto rounded w-100 position-relative text-center bg-info d-block d-md-none">
      <div class="header-title text-center">
        <h2 class="w-100 text-white mb-0 py-2">EMOJI関西弁変換</h2>
      </div>
    </div>
  </div>

  <div class="mt-2 container mx-auto w-50">
    <% if @global_error.present? %>
      <p style="color:red; font-weight:bold; text-align:left;">【全体エラー】<%= @global_error %></p>
    <% end %>
    <% if @api_error.present? %>
      <p style="color:red; font-weight:bold; text-align:left;">【APIエラー】<%= @api_error %></p>
    <% end %>
  </div>

  <div class="container py-4">
    <ul class="nav nav-pills justify-content-center gap-3 mb-2" id="pills-tab" role="tablist">

      <li class="nav-item">
        <a class="nav-link custom-tab active"
          id="pills-auto-tab"
          data-bs-toggle="pill"
          href="#pills-auto">
          自動生成
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link custom-tab"
          id="pills-templates-tab"
          data-bs-toggle="pill"
          href="#pills-templates">
          テンプレート
        </a>
      </li>

      <li class="nav-item">
        <a class="nav-link custom-tab"
          id="pills-histories-tab"
          data-bs-toggle="pill"
          href="#pills-histories">
          Myテンプレート
        </a>
      </li>

    </ul>
  </div>

    <div class="tab-content border border-top-0 rounded-bottom py-2 mx-auto" id="pills-tabContent" style="max-width:750px; width:100%;">
      <div class="tab-pane fade show active" id="pills-auto" role="tabpanel" aria-labelledby="pills-auto-tab" tabindex="0">
        <%= render "auto_generation" %>
      </div>
      <div class="tab-pane fade" id="pills-templates" role="tabpanel" aria-labelledby="pills-templates-tab" tabindex="0">
        <%= render "templates" %>
      </div>
      <div class="tab-pane fade" id="pills-histories" role="tabpanel" aria-labelledby="pills-histories-tab" tabindex="0">
        <%= render "main/history" %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

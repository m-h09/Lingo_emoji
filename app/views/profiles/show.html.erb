<div class="container">
  <div class="row">
    <div class=" col-md-10  mt-5 col-lg-8 mx-auto">
    <%= link_to "トップへ戻る", root_path, class: "back-link" %>
      <h1 class="text-center"><%= t('.title') %></h1>
      <div class="d-flex justify-content-center mb-4">
        <div class="card mt-4" style="width: 500px;">
          <div class="card-body mb-2">
            <table class="table">
              <tr>
                <th scope="row"><%= User.human_attribute_name(:email) %></th>
                <td><%= current_user.email %></td>
              </tr>
              <tr>
                <th scope="row"><%= User.human_attribute_name(:name) %></th>
                <td><%= current_user.name %></td>
              </tr>
              <tr>
                <th scope="row"><%= User.human_attribute_name(:avatar) %></th>
                <td><%= image_tag current_user.avatar_url, class: 'rounded-circle', size: '50x50' %></td>
              </tr>
            </table>
          </div>
          <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-success w-auto mx-auto d-block mb-4' %>
        </div>
      </div>
    </div>
  </div>
  
</div>

<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class=" col-md-10  mt-5 col-lg-8 mx-auto">
    <%= link_to "トップへ戻る", root_path, class: "back-link" %>
      <h1 class="text-center"><%= t('.title') %></h1>
      <div class="d-flex justify-content-center mb-4">
        <div class="card mt-4" style="width: 500px;">
          <div class="card-body mb-2">
            <%= form_with model: @user, url: profile_path, method: :put do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
              <div class="mb-3">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: "form-control" %>
              </div>
              <div class="mb-3">
                <%= f.label :email, class: "form-label" %>
                <%= f.email_field :email, class: "form-control" %>
              </div>
              <div class="mb-3">
                <%= f.label :avatar %>
                <%= f.file_field :avatar, class: 'form-control mb-3', accept: 'image/*' %>
                <%= f.hidden_field :avatar_cache %>
                <div class='mt-3 mb-3 text-center'>
                  <%= image_tag @user.avatar.url, class: 'rounded-circle', id: 'preview', size: '100x100' %>
                </div>
              </div>
              <div class="mt-3 text-center mb-3">
                <%= f.submit class: "btn btn-primary" %>
              </div>
            <% end %>
            <div class='text-center'>
              <%= link_to t('.to_login_page'), login_path %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</div>

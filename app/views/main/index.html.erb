<div class="container">
  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>">
      <%= message %>
    </div>
  <% end %>

  <% if logged_in? %>
    <%= render "shared/after_login_view" %>
  <% else %>
    <%= render "shared/before_login_view" %>
  <% end %>
</div>

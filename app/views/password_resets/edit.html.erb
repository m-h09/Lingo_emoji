<div class="container" style="max-width: 400px; margin: 60px auto; text-align: center;">
  <h2>パスワード再設定</h2>
  <p>新しいパスワードを入力してください。</p>

  <%= form_with(model: @user, url: password_reset_path(@token), local: true) do |f| %>
    <div style="margin-bottom: 20px; text-align: left;">
      <%= f.label :password, "新しいパスワード", style: "display: block; font-weight: bold;" %>
      <%= f.password_field :password, class: "form-control", style: "width: 100%; padding: 8px;" %>
    </div>

    <div style="margin-bottom: 20px; text-align: left;">
      <%= f.label :password_confirmation, "パスワード確認", style: "display: block; font-weight: bold;" %>
      <%= f.password_field :password_confirmation, class: "form-control", style: "width: 100%; padding: 8px;" %>
    </div>

    <div>
      <%= f.submit "更新する", class: "btn btn-primary", style: "width: 100%;" %>
    </div>
  <% end %>

  <div style="margin-top: 20px;">
    <%= link_to "ログインページへ戻る", login_path %>
  </div>
</div>
